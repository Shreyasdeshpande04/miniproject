<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Professional Navbar</title>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    nav {
      background-color: #ffffff;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 30px;
      height: 60px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      position: sticky;
      top: 0;
      z-index: 1000;
      flex-wrap: nowrap;
       box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);

  /* Text shadow */
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.2);
    }

    .nav-left {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .brand-title {
      font-size: 18px;
      font-weight: bold;
      color: #000;
      white-space: nowrap;
    }

    #navList {
      list-style: none;
      display: flex;
      gap: 20px;
    }

    #navList li a {
      text-decoration: none;
      color: black;
      padding: 10px 15px;
      border-radius: 5px;
      font-weight: 500;
      transition: background 0.3s ease;
    }

    #navList li a:hover {
      background-color: #d46a6a;
      color: white;
      height: 100px;
    }

    .hamburger {
      display: none;
      font-size: 24px;
      cursor: pointer;
      color: black;
    }

    @media (max-width: 768px) {
      nav {
        flex-direction: column;
        align-items: flex-start;
        height: auto;
        padding: 10px 20px;
      }

      .hamburger {
        display: block;
        align-self: flex-end;
        margin-bottom: 5px;
      }

      #navList {
        display: none;
        flex-direction: column;
        width: 100%;
        margin-top: 10px;
      }

      #navList.show {
        display: flex;
        background-color: #FFDCDC;
      }

      #navList li a {
        padding: 12px 20px;
        width: 100%;
      }

      .brand-title {
        margin-bottom: 5px;
      }
    }
  </style>
</head>
<body>

  <nav>
    <div class="nav-left">
      <div class="brand-title">MY MERN STACK JOURNEY</div>
    </div>

    <div class="hamburger" onclick="toggleMenu()"><i class="fas fa-bars"></i></div>

    <ul id="navList">
      <li><a href="/homepage"><i class="fas fa-home"></i> Home</a></li>
      <% if (loggedIn) { %>
        <li><a href="/signup"><i class="fas fa-plus-circle"></i> Post</a></li>
        <li><a href="/list"><i class="fas fa-table"></i> Table</a></li>
        <li><a href="/services"><i class="fas fa-cogs"></i> MERN</a></li>
        <li><a href="/contact"><i class="fas fa-envelope"></i> Contact</a></li>
        <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      <% } else { %>
        <li><a href="/services"><i class="fas fa-cogs"></i> MERN</a></li>
        <li><a href="/contact"><i class="fas fa-envelope"></i> Contact</a></li>
        <li><a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
      <% } %>
    </ul>
  </nav>

  <script>
    function toggleMenu() {
      document.getElementById("navList").classList.toggle("show");
    }
  </script>

</body>
</html>
