        <div class="post-count">Total Posts: <%= users.filter(u => u.course === 'Mongodb').length %></div>
        <div class="section-box">
          <div class="scroll-wrapper">
            <% let mongoIndex = 0; %>
            <% users.filter(u => u.course === 'Mongodb').forEach((user, i) => { %>
              <div class="scroll-card">
                <div class="card">
                  <table>
                    <tr><th>Day</th><td><%= ++mongoIndex %></td></tr>
                    <tr><th>Topic</th><td><%= user.topic %></td></tr>
                    <tr><th>Description</th><td><%= user.description %></td></tr>
                    <tr><th>LinkedIn</th>
                      <td>
                        <a href="<%= user.llink %>" target="_blank" class="btn btn-primary btn-sm btn-custom"><i class="fab fa-linkedin"></i> Visit</a>
                        <button class="btn btn-light btn-sm btn-custom" onclick="copyToClipboard('<%= user.llink %>')"><i class="fas fa-share"></i> Share</button>
                      </td>
                    </tr>
                    <tr><th>GitHub</th>
                      <td>
                        <a href="<%= user.glink %>" target="_blank" class="btn btn-dark btn-sm btn-custom"><i class="fab fa-github"></i> Visit</a>
